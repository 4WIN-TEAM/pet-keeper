@model PetKeeper.Models.PodaciViewModel
@using static PetKeeper.Common.VakcinisanEnum
@using static PetKeeper.Common.RasaEnum
@using static PetKeeper.Common.PolEnum
@using static PetKeeper.Common.SterilisanEnum
@using static PetKeeper.Common.StatusEnum

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Nova rezervacija</h5>
                <button type="submit" class="close" data-dismiss="modal" aria-label="Close" data-toggle="tooltip" data-placement="left" title="Close" data-original-title="Tooltip on left">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="myModalForm">
                <div class="modal-body">
                    <input asp-for="Id" type="text" id="id" hidden />

                    <div class="form-group">
                        <label asp-for="Ime" class="control-label"></label>
                        <input asp-for="Ime" class="form-control" id="ime" />
                        <span asp-validation-for="Ime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Starost" class="control-label"></label>
                        <input asp-for="Starost" class="form-control" id="starost" />
                        <span asp-validation-for="Starost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DatumPrijema" class="control-label"></label>
                        <input asp-for="DatumPrijema" class="form-control" id="datumPrijema" />
                        <span asp-validation-for="DatumPrijema" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DatumOdjave" class="control-label"></label>
                        <input asp-for="DatumOdjave" class="form-control" id="datumOdjave" />
                        <span asp-validation-for="DatumOdjave" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="rasa">
                        <label asp-for="Rasa" class="control-label"></label>
                        @Html.DropDownList("Rasa", Html.GetEnumSelectList<RasaEnums>(), new { @class = "form-control" })
                    </div>
                    <div class="form-group" id="pol">
                        <label asp-for="Pol" class="control-label"></label>
                        @Html.DropDownList("Pol", Html.GetEnumSelectList<PolEnums>(), new { @class = "form-control" })
                    </div>
                    <div class="form-group" id="sterilisan">
                        <label asp-for="Sterilisan" class="control-label"></label>
                        @Html.DropDownList("Sterilisan", Html.GetEnumSelectList<SterilisanEnums>(), new { @class = "form-control" })
                    </div>
                    <div class="form-group" id="vakcinisan">
                        <label asp-for="Vakcinisan" class="control-label"></label>
                        @Html.DropDownList("Vakcinisan", Html.GetEnumSelectList<VakcinisanEnums>(), new { @class = "form-control" })
                    </div>

                    <input asp-for="User" type="text" id="user" hidden />

                    <input asp-for="UserName" type="text" id="userName" hidden />

                    <input asp-for="Status" type="text" id="status" hidden />
                </div>
                <div class="modal-footer">
                    <input id="submitButton" type="submit" class="btn btn-primary" value="Sacuvaj" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                </div>
            </form>
        </div>
    </div>
</div>



